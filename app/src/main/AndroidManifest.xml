<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />

    <!-- Needed for Android SDK 21+ -->
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <!-- Needed for Android SDK 28+ -->
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />

    <!-- Needed for Android SDK 33+ -->
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />

    <application
        android:allowBackup="false"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:name=".RIADigiDocApp"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.RIADigiDoc"
        android:usesCleartextTraffic="${usesCleartextTraffic}"
        tools:targetApi="31">
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.RIADigiDoc">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity-alias
            android:name=".MainActivity.OPEN_CUSTOM_TYPES"
            android:exported="true"
            android:label="@string/app_name"
            android:targetActivity=".MainActivity"
            tools:ignore="AppLinkUrlError">

            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.BROWSABLE" />
                <category android:name="android.intent.category.DEFAULT" />

                <data android:host="*" />
                <data android:scheme="content" />
                <data android:scheme="file" />

                <data android:mimeType="application/x-cdoc" />
                <data android:mimeType="application/x-p12d" />
                <data android:mimeType="application/vnd.lt.archyvai.adoc-2008" />

                <data android:mimeType="application/x-ddoc" />
                <data android:mimeType="application/vnd.etsi.asic-s+zip" />

                <data android:mimeType="application/vnd.etsi.asic-e+zip" />
                <data android:mimeType="application/x-zip" />

                <data android:mimeType="application/pdf" />

                <data android:mimeType="application/octet-stream" />
            </intent-filter>
        </activity-alias>

        <activity-alias
            android:name=".MainActivity.OPEN_ALL_FILE_TYPES"
            android:exported="true"
            android:label="@string/app_name"
            android:targetActivity=".MainActivity"
            tools:ignore="AppLinkUrlError">

            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.BROWSABLE" />
                <category android:name="android.intent.category.DEFAULT" />

                <data android:host="*" />
                <data android:scheme="content" />
                <data android:scheme="file" />

                <data android:mimeType="*/*" />
            </intent-filter>
        </activity-alias>

        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="@string/file_provider_authority"
            android:exported="false"
            android:grantUriPermissions="true"
            android:permission="android.permission.MANAGE_DOCUMENTS">

            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_provider_paths" />

        </provider>

        <meta-data
            android:name="firebase_crashlytics_collection_enabled"
            android:value="false" />

        <provider
            android:name=".provider.SignedContainersDocumentsProvider"
            android:authorities="@string/document_provider_authority"
            android:exported="true"
            android:grantUriPermissions="true"
            android:permission="android.permission.MANAGE_DOCUMENTS">
            <intent-filter>
                <action android:name="android.content.action.DOCUMENTS_PROVIDER" />
            </intent-filter>
        </provider>
    </application>

    <queries>
        <intent>
            <action android:name="android.intent.action.SEND" />
            <data android:mimeType="application/*" />
        </intent>
    </queries>

</manifest>